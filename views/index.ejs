<!DOCTYPE html>
<html>

<head>

  <style>
    table {
      font-family: Arial, Helvetica, sans-serif;
      border-collapse: collapse;
      width: 100%;

    }

    table tr {
      border: 1px solid;
    }

    table td {
      padding: 10px;
      text-align: left;
      background-color: rgb(56, 151, 180);
      color: rgb(0, 0, 0);
      border: 1px solid
    }

    table th {
      padding: 10px;
      text-align: center;
      background-color: rgb(56, 151, 180);
      color: rgb(0, 0, 0);
      border: 1px solid
    }
  </style>


  <title id="title">
    <%= title %>
  </title>

  <link rel='stylesheet' href='/sit722-2023-t2-glossary/public/stylesheets/style.css' />
</head>

<body>
  <h1>
    <%= title %>
  </h1>
  <p>
    <%= subheading %>
  </p>
  <table id="glossary">
    <% titles.forEach((title_list)=> { %>

      <tr>
        <th>
          <%= title_list.id %>
        </th>

        <th>
          <%= title_list.Term %>
        </th>

        <th>
          <%= title_list.Description %>
        </th>

        <th>
          <%= title_list.References %>
        </th>
      </tr>

      <% list.forEach((stuff)=> { %>
        <tr>
          <td>
            <%= stuff.id %>
          </td>

          <td>
            <%= stuff.Term %>
          </td>

          <td>
            <%= stuff.Description %>
          </td>

          <td>
            <%= stuff.References %>
          </td>

          <% }); %>
        </tr>

        <% }); %>
  </table>
</body>

</html>